---
const { title, subtitle } = Astro.props;
---

<!-- Wrapper file for resume sections -->
<section>
  {title && <h2>{title}</h2>}
  {subtitle && <h3>{subtitle}</h3>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 48px;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }
  h3 {
    margin-bottom: 8px;
    margin-top: -8px;
    font-weight: 600;
    line-height: 1.5;
    font-size: 18px;
    animation-name: fluctuating;
    animation-duration: 3s;
    animation-iteration-count: infinite;
  }

  @keyframes fluctuating {
    0% {
      color: black;
    }
    50% {
      color: white;
    }

    100% {
      color: black;
    }
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 38px;
    }
  }
</style>
