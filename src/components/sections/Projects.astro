---
import { Icon } from "astro-icon/components";
import Section from "../Section.astro";
import { getCollection } from "astro:content";

const projectsResponse = await getCollection("projects");

if (!projectsResponse) return new Response("No projects found");

const projects = projectsResponse.map((proj) => proj.data);
---

<Section title="Projects" subtitle="(in progress...)">
  <ul>
    {
      projects.map(
        ({
          id,
          name,
          description,
          year_published,
          last_updated,
          still_participating,
          isActive,
          highlights,
          github,
        }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a
                      href={`/projects/${id}`}
                      title={`View the project ${name}`}
                    >
                      {name}
                    </a>
                    {isActive ? (
                      <span class="live">•Live</span>
                    ) : (
                      <span class="archived">◦Archived</span>
                    )}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>;
                  })}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  article h3 span {
    border-radius: 6px;
    background: rgb(199 255 213);
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    color: rgb(0, 188, 47);
    word-break: break-word;
    /* animation-name: pulse;
    animation-duration: 3s;
    animation-timing-function: ease-in;
    animation-iteration-count: infinite; */
  }
  article h3 span.archived {
    background: #e99292;
    color: white;
    /* animation: none; */
    opacity: 0.7;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  .github-code-link {
    margin-left: 5px;
  }

  @keyframes pulse {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.25;
    }
    100% {
      opacity: 1;
    }
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }

    article {
      border: none;
      box-shadow: 0 1px 1px #f2f2f2;
      padding: 0 0 16px 0;
    }
  }

  @media print {
    article h3 span {
      animation-name: none;
    }
  }
</style>
