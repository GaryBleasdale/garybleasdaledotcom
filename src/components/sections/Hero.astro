---
import Section from "@/components/Section.astro";
import { basics as basicsData } from "@cv";
import { Icon } from "astro-icon/components";
import { getIconName } from "@/data/profile-icons";
import type { Basics } from "@/data/cv";

const basics = basicsData as Basics;
const { name, label, image, profiles = [], phone, email } = basics;
const city = basics.location?.city ?? "";
const countryCode = basics.location?.countryCode ?? "";
const region = basics.location?.region ?? "";

const linkedinUrl = profiles.find(({ network }) => network === "LinkedIn")?.url;

const printInfo = [email, phone, linkedinUrl].filter(Boolean).join(" â€¢ ");
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      {
        city && (
          <span>
            <Icon name="globe" />
            {region ? `${city}, ${region}` : `${city}, ${countryCode}`}
          </span>
        )
      }
      <footer class="print">
        {printInfo}
      </footer>
      <footer class="no-print">
        {
          email && (
            <div class="telephone-icon">
              <a title={`Email ${name} at ${email}`}>
                <Icon name="mail" />
              </a>
              <div class="telephone-details-container">
                <div class="telephone-details-ruler" />
                <div class="telephone-details">
                  Send an email to gary@garybleasdale.com
                  <span id="copy-email">Copy email</span>
                </div>
              </div>
            </div>
          )
        }
        {
          profiles.map(({ network, url }) => {
            const iconName = getIconName(network);

            return (
              <a
                href={network === "GitHub" ? "/git" : url}
                title={
                  network === "WhatsApp"
                    ? `Talk to ${name} on ${network}`
                    : `Visit ${name}'s on ${network}`
                }
                target={network === "GitHub" ? "_self" : "_blank"}
                rel="noopener noreferrer"
              >
                {iconName && <Icon name={iconName} class="icon hero-icon" />}
              </a>
            );
          })
        }
      </footer>
    </div>
    <figure>
      {image && <img src={image} alt={name} />}
    </figure>
  </div>
</Section>

<script>
  let telephoneIcon = document.querySelector(".telephone-icon");
  telephoneIcon?.addEventListener("click", function () {
    console.log(telephoneIcon);
    const detailsContainer = this.querySelector(".telephone-details-container");
    detailsContainer.style.display = "block";
  });
  document.addEventListener("click", function (e) {
    console.log(e.target);
    if (!e.target!.closest(".telephone-icon")) {
      console.log("running remove style");
      const detailsContainer = document.querySelector(
        ".telephone-details-container"
      );
      detailsContainer.style.display = "none";
      telephoneIcon.classList.remove("hovered-link");
    } else {
      telephoneIcon.classList.add("hovered-link");
    }
  });

  const emailCopy = document.getElementById("copy-email");
  emailCopy?.addEventListener("click", function () {
    navigator.clipboard.writeText("gary@garybleasdale.com");
  });
</script>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .hero-icon {
    width: 250;
    height: 250;
    display: inline-block;
    vertical-align: middle;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    color: #444;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 16px;
  }

  span {
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  footer {
    color: #555;
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }

  footer a {
    color: #777;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  footer a:hover {
    background: #eee;
    border: 1px solid #ddd;
  }

  .hovered-link {
    background: #eee;
    border: 1px solid #ddd;
  }

  .telephone-icon {
    position: relative;
  }

  .telephone-details-container {
    display: none;
  }

  .telephone-details-ruler {
    height: 5px;
    width: 50px;
    position: absolute;
  }
  .telephone-details {
    position: absolute;
    color: #777;
    font-size: 12px;
    border: 1px solid #eee;
    padding: 4px;
    border-radius: 6px;
    transition: all 0.3s ease;
    margin-top: 5px;
  }

  @media (width <= 700px) {
    .container {
      flex-direction: column-reverse;
    }

    .info {
      justify-content: center;
      align-items: center;
      padding-right: 0;
      text-align: center;
    }

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    h2 {
      text-wrap: balance;
    }

    figure {
      margin: 0 auto;
    }
  }
</style>
